# VulnZero Environment Configuration
# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL=postgresql://vulnzero:password@localhost:5432/vulnzero
DATABASE_POOL_SIZE=20

# Redis
REDIS_URL=redis://localhost:6379/0

# LLM Configuration (choose one)
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4

# OR Anthropic
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Vulnerability Scanners (optional - configure as needed)
WAZUH_API_URL=https://wazuh.example.com:55000
WAZUH_API_USERNAME=admin
WAZUH_API_PASSWORD=changeme

QUALYS_API_URL=https://qualysapi.qualys.com
QUALYS_USERNAME=your_username
QUALYS_PASSWORD=changeme

TENABLE_ACCESS_KEY=your_access_key
TENABLE_SECRET_KEY=your_secret_key

# Security
JWT_SECRET_KEY=generate-a-random-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# API Authentication
API_KEYS=["your-api-key-1", "your-api-key-2"]  # Comma-separated list of API keys
REQUIRE_AUTH_IN_DEV=false  # Set to true to require auth in development

# Application
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO
API_PORT=8000
FRONTEND_URL=http://localhost:3000

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL=security-team@example.com

# Docker
DOCKER_HOST=unix:///var/run/docker.sock

# Deployment
ANSIBLE_VAULT_PASSWORD=your-vault-password
SSH_KEY_PATH=/path/to/ssh/key

{
  "dashboard": {
    "title": "VulnZero - System Overview",
    "tags": ["vulnzero", "overview", "system"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "type": "graph",
        "title": "HTTP Requests per Second",
        "targets": [
          {
            "expr": "rate(vulnzero_http_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}} - {{status_code}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ],
        "xaxis": {"mode": "time"},
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "pointradius": 5,
        "legend": {
          "show": true,
          "values": true,
          "avg": true,
          "max": true,
          "current": true
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "type": "graph",
        "title": "API Response Time (p95)",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(vulnzero_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{method}} {{endpoint}} p95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(vulnzero_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{method}} {{endpoint}} p50",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Response Time"},
          {"format": "short"}
        ],
        "xaxis": {"mode": "time"},
        "lines": true,
        "fill": 1,
        "linewidth": 2
      },
      {
        "id": 3,
        "gridPos": {"h": 6, "w": 4, "x": 0, "y": 8},
        "type": "stat",
        "title": "Total Requests",
        "targets": [
          {
            "expr": "sum(vulnzero_http_requests_total)",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 6, "w": 4, "x": 4, "y": 8},
        "type": "stat",
        "title": "Error Rate (%)",
        "targets": [
          {
            "expr": "sum(rate(vulnzero_http_requests_total{status_code=~\"5..\"}[5m])) / sum(rate(vulnzero_http_requests_total[5m])) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 6, "w": 4, "x": 8, "y": 8},
        "type": "stat",
        "title": "Active Requests",
        "targets": [
          {
            "expr": "sum(vulnzero_http_requests_in_progress)",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 100, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "gridPos": {"h": 6, "w": 4, "x": 12, "y": 8},
        "type": "stat",
        "title": "DB Connection Pool",
        "targets": [
          {
            "expr": "vulnzero_db_pool_connections_checked_out",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "max": 20,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 15, "color": "yellow"},
                {"value": 18, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "gridPos": {"h": 6, "w": 4, "x": 16, "y": 8},
        "type": "stat",
        "title": "Celery Workers",
        "targets": [
          {
            "expr": "vulnzero_celery_workers_active",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "gridPos": {"h": 6, "w": 4, "x": 20, "y": 8},
        "type": "stat",
        "title": "Cache Hit Rate (%)",
        "targets": [
          {
            "expr": "sum(rate(vulnzero_cache_hits_total[5m])) / (sum(rate(vulnzero_cache_hits_total[5m])) + sum(rate(vulnzero_cache_misses_total[5m]))) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 50, "color": "yellow"},
                {"value": 80, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
        "type": "graph",
        "title": "Database Query Duration",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(vulnzero_db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "{{operation}} {{table}} p95",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Query Time"},
          {"format": "short"}
        ],
        "xaxis": {"mode": "time"},
        "lines": true,
        "fill": 1
      },
      {
        "id": 10,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
        "type": "graph",
        "title": "Celery Task Duration",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(vulnzero_celery_task_duration_seconds_bucket[5m]))",
            "legendFormat": "{{task_name}} p95",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Task Duration"},
          {"format": "short"}
        ],
        "xaxis": {"mode": "time"},
        "lines": true,
        "fill": 1
      }
    ],
    "refresh": "10s",
    "schemaVersion": 27,
    "version": 1,
    "uid": "vulnzero-system-overview",
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
